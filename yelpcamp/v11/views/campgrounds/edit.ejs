<% include ../partials/header %>

<div class="container">

    <div class="row">
      <h1 style="text-align: center;">Edit <%= campground.name %></h1>
      <div class="" style="width: 30%; margin: 25px auto;">
        <form class="" action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
          <div class="form-group">
            <input type="text" name="campground[name]" value="<%= campground.name %>" class="form-control">
          </div>
          <div class="form-group">
            <input type="number" name="campground[price]" value="<%= campground.price %>" class="form-control" min="0.01" step="0.01">
          </div>
          <div class="form-group">
            <input type="text" name="campground[image]"  value="<%= campground.image %>" class="form-control">
          </div>
          <div class="form-group">
            <textarea class="form-control" name="campground[description]" rows="8" cols="80"><%= campground.description %></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-success btn-block">Submit!</button>
          </div>
        </form>
        <a class="btn btn-primary btn-block" href="/campgrounds">Go back</a>
      </div>
      <br>
      <br>

    </div>
  </div>

<% include ../partials/footer %>